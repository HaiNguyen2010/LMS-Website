{
    "testEnvironment": "node",
    "testMatch": [
        "**/__tests__/**/*.test.js",
        "**/*.test.js"
    ],
    "collectCoverageFrom": [
        "controllers/**/*.js",
        "routes/**/*.js",
        "models/**/*.js",
        "!models/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000
}